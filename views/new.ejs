<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Add New Team</title>
    <%- include('partials/style') %>
    <link href="https://fonts.googleapis.com/css?family=Bangers&display=swap" rel="stylesheet">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
   <script src='/jquery/jquery.js' type="text/javascript"></script>
  </head>
  <body>
    <% include ./partials/nav.ejs %>
    <div class="container teamContainer">
      <div>
        <h1 class="center">Add New Team</h1>
      </div>
      <form action="/" method="POST">
        <div class="form-group">
          <label for="formGroupExampleInput">Team Name</label>
          <input type="text" class="form-control" name="name"/><br>
        </div>
        <div class="form-group">
          <label for="formGroupLogoInput">Logo</label>
          <input type="text" class="form-control" name="logo"/><br>
        </div>
        <div class="form-row">
          <div class="form-group col-sm">
            <label for="inputEmail4">Sport</label>
            <input type="text" class="form-control" name="sport"/><br>
          </div>
          <div class="form-group col-sm">
            <label for="inputEmail4">Platform</label>
            <input type="text" class="form-control" name="platform"/><br>
          </div>
          <div class="form-group col-sm">
            <label for="inputEmail4">Place</label>
            <input type="number" class="form-control" name="place"/><br>
          </div>
        </div>
        <div class="container flex-col">
          <h4 class="align-left">Players</h4>
        <div id = "players">
          <div class="flex-row">
            <h5>Name</h5>
            <h5>Team</h5>
            <h5>Position</h5>
          </div>
        <% i = 0 %>
        <% while (i < 10) { %>
          <div class="flex-row">
            <input class="player-info" type="text" name="players"/>
            <input class="player-info" type="text" name="players"/>
            <input class="player-info" type="text" name="players"/>
          <% i++ %>
          </div>
        <% } %>
        </div>
        <button type="button" name="button" class="btn btn-secondary">Add Another Player</button>
        <br>
        <div class="flexCol">
          <input class="btn btn-primary add-team" type="submit" value="Create Team">
        </div>
      </form>
    </div>
  </body>
</html>
